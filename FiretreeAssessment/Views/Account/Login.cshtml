@using FiretreeAssessment.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<link href="~/Content/Login.css" rel="stylesheet" type="text/css" />

<div class="login">
    <div class="wrap">
        <div class="content">
            <!-- LOGO -->
            <div class="logo">
                <br />
                <a href="#"><img src="~/Backgrounds/globe-icon3.png" alt=""></a>
            </div>
            <!-- SLIDESHOW -->
            <div id="slideshow">
                <div class="one">
                    <h2><span> Places2Go</h2>

                    <p>Booking System</p>
                </div>

            </div>
        </div>
        <!-- LOGIN FORM -->
        <div class="user">
            <div class="form-wrap">
                <!-- TABS -->
                <div class="tabs">
                    <h3 class="login-tab"><a class="log-in active" href="#login-tab-content"><span>Login as Admin<span></a></h3>
                </div>
                <!-- TABS CONTENT -->
                <div class="tabs-content">
                    <!-- TABS CONTENT LOGIN -->
                    <div id="login-tab-content" class="active">

                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
                        {
                            <form class="login-form" action="" method="post">
                                @Html.AntiForgeryToken()
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @Html.TextBoxFor(m => m.Email, new { @class = "input", id = "user_login", placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


                                @Html.PasswordFor(m => m.Password, new { @class = "input", id = "user_login", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                <input type="submit" class="button" value="Login">

                            </form>
                        }
                    </div>
                    <br />
                    <div class="help-action">
                        <p> @Html.ActionLink("Register", "Register", "Account", new { @class = "forgot" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


